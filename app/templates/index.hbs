<div class="well">
	<h1>index</h1>

	<form role="form" >
		<div class="form-group">
			<label for="">Email address</label>
			{{input  type="email" class="form-control" id="" placeholder="Enter email" name="email" value=email }}
		</div>
		<div class="form-group">
			<label for="">Password</label>
			{{input type="password" class="form-control" id="" placeholder="Password" name="password"  value=password }}
		</div>
		<div class="checkbox">
			<label>
			{{input type="checkbox" checked=remember }} Check me out
			</label>
		</div>

		<div class="form-group">
			<label for="submitButton1"></label>
			<button type="submit"  {{action 'formSubmit' preventDefault=true }}  class="btn btn-default">提交</button>
		</div>
	</form>

	{{outlet}}
    Welcome to Yeoman and Ember.js!

</div>
