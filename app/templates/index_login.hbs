{{#if loggedIn}}
  <p>You are already logged in!</p>
{{else}}
  <form class="form-inline" {{action login on="submit"}}>
    <h2>Log In</h2>
	<div class="form-group">
		<label for="">Email address/Username</label>
		{{input value=username type="text" placeholder="Email address/Username" class="form-control" }}
	</div>
	<div class="form-group">
		<label for="">Password</label>
		{{input value=password type="password" placeholder="Password" class="form-control"}}
	</div>

    
	<div class="checkbox">
		<label>
		{{input type="checkbox" checked=remember }} Check me out
		</label>
	</div>

    <div class="form-group">
    	{{input class="btn" type="submit" value="提交"}}
    </div>
  </form>
  {{#if errorMessage}}
    <div class="alert alert-error">{{errorMessage}}</div>
  {{/if}}
{{/if}}