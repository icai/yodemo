
<div class="well well-login">

	{{#if loggedIn}}
	  <p>You are already logged in!</p>
	{{else}}
	  {{#if errorMessage}}
	    <div class="alert alert-danger">{{errorMessage}}</div>
	  {{/if}}
	  <form class="form" {{action login on="submit"}}>
	    <h2>Log In</h2>
		<div class="form-group">
			<label for="">Email address/Username</label>
			{{input value=username type="text" placeholder="Email address/Username" class="form-control" }}
		</div>
		<div class="form-group">
			<label for="">Password</label>
			{{input value=password type="password" placeholder="Password" class="form-control"}}
		</div>


		<div class="form-group">
			<div class="checkbox">
				<label>
				{{input type="checkbox" checked=remember }} Check me out
				</label>
			</div>
		</div>
	    <div class="form-group">
	    	{{input class="btn btn-primary btn-block" type="submit" value="提交"}}
	    </div>
	  </form>
	{{/if}}


</div>


<p>Welcome Ember.js!  {{#link-to 'index.signup'}}signup{{/link-to}}</p>

